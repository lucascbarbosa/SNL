function [U,V,Vm,w] = plotG_Gm(G,K,q)
close all;
figure;
w = 0:0.1:10;
[M,P] = bode(G,w);
M = reshape(M,[length(M) 1]);
P = reshape(P,[length(P) 1]);
U = M.*cos(deg2rad(P));
V = M.*sin(deg2rad(P));
Um = U;
for i=1:length(V)
    Vm(i) = w(i)*V(i);
end
Vm = Vm';
plot(U,V);
hold on;
plot(U,Vm,'--');
hold on;
x = xlim(1):0.1:xlim(2);
y = x/q + 1/K;
plot(x,y);
legend('G','G^m','Popov');
grid on;
xlim([-0.5 0.5]);
xlim([-0.5 0.5]);
end